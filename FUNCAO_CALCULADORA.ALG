Algoritmo "FUNCAO_CALCULADORA"

Var
   //A diferença entre função e procedimento é que a função tem um retorno
Função somar(x , y : real) : real

Inicio
   Retorne x + y
Fimfuncao

Inicio
   Escreval("O resultado é: ", somar(10,10))
   Escreval("O resultado é: ", somar(2,5))
   Escreval("O resultado é: ", somar(7,8))
Fimalgoritmo